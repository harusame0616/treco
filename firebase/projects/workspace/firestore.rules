rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{authId}/categories/{document=**} {
      allow read: if request.auth != null && request.auth.uid ==  authId;
    }

    match /users/{authId}/categories/{categoryId}/trainingEvents/{document=**} {
      allow read: if request.auth != null && request.auth.uid ==  authId;
    }

    // match /users/{authId}/categories/{document=**} {
    //   allow read: if true;
    // }
  }
}